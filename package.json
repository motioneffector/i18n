{
  "name": "@motioneffector/i18n",
  "version": "0.1.0",
  "description": "Lightweight, type-safe internationalization library with zero dependencies for modern web applications",
  "author": "MotionEffector",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/motioneffector/i18n"
  },
  "homepage": "https://github.com/motioneffector/i18n#readme",
  "bugs": {
    "url": "https://github.com/motioneffector/i18n/issues"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "typescript",
    "pluralization",
    "intl",
    "multilingual",
    "l10n",
    "locale"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  }
}
